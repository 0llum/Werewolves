<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ollum.werewolves.Menu"
    android:background="@drawable/gradientbackground">

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="New Game"
        android:id="@+id/menu_createGame"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Friends"
        android:id="@+id/menu_friends"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Stats"
        android:id="@+id/menu_stats"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Rules"
        android:id="@+id/menu_rules"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Join Chatroom"
        android:id="@+id/menu_openGames"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/menu_logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/menu_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Settings"
        android:id="@+id/menu_settings"
        android:background="@drawable/button_action"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
